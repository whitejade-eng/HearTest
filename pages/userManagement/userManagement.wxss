/* pages/userManagement/userManagement.wxss */

.head-img{
  display: flex;
  justify-content: center;
  align-items: center;
}
.headBackground{
  height:60px;
  width: 60px;
}

input{
  z-index: 50 !important;
}

form view{
  margin-top: 30px;
  margin-bottom: 40px;
  font-size: 14px;
}

form label{
  display: flex;
}


.userMS{
  display: flex;
  justify-content: center;
  align-items: center;
}

.userInfo{
  box-shadow:0rpx 2rpx 5rpx 5rpx #c8c3c3;
  border-radius: 3px;
  height: 40px;
  display: flex;
  padding: 5px 10px;
  align-items: center;
}

.user-randomNumber{
  margin: 5px;
  display: flex;
  justify-content: center;
  align-items: center;

}

radio-group{
  display: flex;
  align-items: flex-end;
}

radio-group .radio{
  margin-left: 20px;
}

radio-group radio{
  margin-left: 20px;
}

radio-group label{
  border: none;
}

slider{
  background-color: #3da9fc;
}

.btn{
  width: 90%;
  background-color: #3da9fc;
  color: #fffffe;
  
}

.tips {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
}

.tips .tips_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 75%;
  height: auto;
  border-radius: 45rpx;
  background: #fff;
  overflow: hidden;
}

.tips .tips_box .hint_view {
  display: flex;
  align-items: center;
}

.tips .tips_box .hint_view .text {
  display: flex;
  flex-direction: column;
  margin: 12rpx 24rpx;
}

.tips .tips_box .hint1 {
  margin-top: 38rpx;
  text-align: center;
  font-size: 30rpx;
  color: #1a1a1a;
  line-height:52rpx;
  border-bottom:1px solid;
}

.tips .tips_box .hint2 {
  margin-top: 14rpx;
  text-align: justify;
  text-indent:52rpx;
  font-size: 26rpx;
  color: #666;
  line-height:42rpx;
}

.tips .tips_box .login {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 32rpx 0 32px;
  width: 50%;
  line-height: 64rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
  letter-spacing: 6rpx;
  color: #fff;
  background-color: #3da9fc;
}
.isTipShow {
display: block;
}

.isTipHide {
display: none;
}
